{
  "name": "@algoan/nestjs-bridge-connector",
  "version": "0.0.1",
  "description": "Bridge connector for Algoan",
  "author": "",
  "license": "UNLICENSED",
  "scripts": {
    "postinstall": "node-config-ts",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "semantic-release": "semantic-release",
    "start": "nest start",
    "start:dev": "concurrently --kill-others \"npm run start:fake-server\" \"nest start --watch\"",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:fake-server": "node json-server/server.js",
    "lint": "eslint \"{src,apps,libs}/**/*.ts\" --fix",
    "test": "USER=test jest",
    "test:watch": "npm t -- --watch",
    "test:cov": "npm t -- --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "npm t -- --config ./test/jest-e2e.json",
    "prepare": "husky install"
  },
  "dependencies": {
    "@algoan/nestjs-http-exception-filter": "^1.0.13",
    "@algoan/nestjs-logging-interceptor": "^2.1.11",
    "@algoan/rest": "^2.5.3",
    "@nestjs/axios": "^0.0.8",
    "@nestjs/common": "^8.4.7",
    "@nestjs/core": "^8.4.7",
    "@nestjs/platform-express": "^8.4.7",
    "axios": "^0.27.2",
    "cache-manager": "^4.0.1",
    "class-transformer": "^0.3.2",
    "class-validator": "^0.12.2",
    "delay": "^4.4.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.33",
    "nest-winston": "^1.6.2",
    "node-config-ts": "^3.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@algoan/eslint-config": "^1.1.5",
    "@codedependant/semantic-release-docker": "^4.1.0",
    "@commitlint/config-conventional": "^17.0.2",
    "@nestjs/schematics": "^8.0.11",
    "@nestjs/testing": "^8.4.7",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/cache-manager": "^4.0.0",
    "@types/express": "^4.17.12",
    "@types/jest": "^28.1.1",
    "@types/lodash": "^4.14.170",
    "@types/node": "^14.14.31",
    "@types/supertest": "^2.0.12",
    "commitlint": "^17.0.2",
    "concurrently": "^7.2.2",
    "cz-conventional-changelog": "^3.2.0",
    "eslint-plugin-nestjs": "^1.2.3",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "json-server": "^0.17.0",
    "lint-staged": "^13.0.1",
    "nock": "^13.2.7",
    "prettier": "^2.7.1",
    "semantic-release": "^19.0.3",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3",
    "typescript": "^4.7.3",
    "uuid": "^8.3.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "{src,apps,libs}/**/*.ts": [
      "npm run lint"
    ],
    "{src,test}/**/*.ts": [
      "prettier --list-different \"{src,test}/**/*.ts\""
    ]
  }
}
